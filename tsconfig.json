{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"outDir": "./lib",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2018",
		"noImplicitAny": false
	},
	"exclude": ["**/__tests__/*"],
	"include": ["src"]
}
